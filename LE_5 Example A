char inPin = 1;

void count0()
{
digitalWrite(3,HIGH); 
digitalWrite(1,HIGH); 
digitalWrite(2,LOW); 
digitalWrite(4,LOW); 
digitalWrite(5,LOW); 
digitalWrite(6,LOW); 
digitalWrite(7,LOW); 
digitalWrite(8,LOW);
}
