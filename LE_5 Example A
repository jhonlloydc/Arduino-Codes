count7();
inPin = digitalRead(9); 
while (inPin == 1)
{
inPin = digitalRead(9);
}
delay(100); 
count8();
inPin = digitalRead(9); 
while (inPin == 1)
{
inPin = digitalRead(9);
}
delay(100); 
